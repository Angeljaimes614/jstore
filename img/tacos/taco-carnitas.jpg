<?xml version="1.0" encoding="UTF-8"?>
<svg xmlns="http://www.w3.org/2000/svg" width="600" height="400" viewBox="0 0 600 400">
  <!-- Fondo con gradiente suave -->
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f5f5f5;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#e0e0e0;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Fondo -->
  <rect width="600" height="400" fill="url(#bgGradient)" />
  
  <!-- Plato -->
  <ellipse cx="300" cy="320" rx="200" ry="50" fill="#ffffff" stroke="#dddddd" stroke-width="2" />
  
  <!-- Tortilla (base del taco) -->
  <path d="M150,180 C150,280 450,280 450,180 L450,280 C450,320 400,350 300,350 C200,350 150,320 150,280 L150,180 Z" fill="#F2D680" stroke="#E6C666" stroke-width="2" />
  
  <!-- Carnitas -->
  <g>
    <!-- Piezas de carnitas -->
    <path d="M200,200 L230,190 L240,210 L220,225 L190,215 Z" fill="#CD853F" transform="rotate(5, 215, 205)" />
    <path d="M250,195 L280,185 L290,205 L270,220 L240,210 Z" fill="#CD853F" transform="rotate(-8, 265, 200)" />
    <path d="M300,190 L330,185 L340,205 L320,220 L290,210 Z" fill="#CD853F" transform="rotate(10, 315, 200)" />
    <path d="M350,195 L380,190 L390,210 L370,225 L340,215 Z" fill="#CD853F" transform="rotate(-5, 365, 205)" />
    
    <!-- Detalles de textura -->
    <path d="M210,195 L225,205" stroke="#A0522D" stroke-width="2" />
    <path d="M260,190 L275,205" stroke="#A0522D" stroke-width="2" />
    <path d="M310,195 L325,210" stroke="#A0522D" stroke-width="2" />
    <path d="M360,200 L375,215" stroke="#A0522D" stroke-width="2" />
    
    <!-- Bordes dorados (efecto de cocción lenta) -->
    <path d="M200,200 L230,190" stroke="#B8860B" stroke-width="2" />
    <path d="M250,195 L280,185" stroke="#B8860B" stroke-width="2" />
    <path d="M300,190 L330,185" stroke="#B8860B" stroke-width="2" />
    <path d="M350,195 L380,190" stroke="#B8860B" stroke-width="2" />
  </g>
  
  <!-- Cebolla -->
  <g>
    <circle cx="230" cy="180" r="8" fill="#FFFFFF" stroke="#DDDDDD" stroke-width="1" />
    <circle cx="260" cy="175" r="7" fill="#FFFFFF" stroke="#DDDDDD" stroke-width="1" />
    <circle cx="290" cy="170" r="9" fill="#FFFFFF" stroke="#DDDDDD" stroke-width="1" />
    <circle cx="320" cy="175" r="8" fill="#FFFFFF" stroke="#DDDDDD" stroke-width="1" />
    <circle cx="350" cy="180" r="7" fill="#FFFFFF" stroke="#DDDDDD" stroke-width="1" />
  </g>
  
  <!-- Cilantro -->
  <g fill="#4CAF50">
    <path d="M240,170 C245,165 250,168 248,173 C253,170 258,173 255,178 C250,180 245,178 240,170 Z" />
    <path d="M280,165 C285,160 290,163 288,168 C293,165 298,168 295,173 C290,175 285,173 280,165 Z" />
    <path d="M320,160 C325,155 330,158 328,163 C333,160 338,163 335,168 C330,170 325,168 320,160 Z" />
    <path d="M360,165 C365,160 370,163 368,168 C373,165 378,168 375,173 C370,175 365,173 360,165 Z" />
  </g>
  
  <!-- Limón (rodajas) -->
  <g>
    <circle cx="220" cy="160" r="10" fill="#FFFF00" opacity="0.8" stroke="#E6E600" stroke-width="1" />
    <circle cx="220" cy="160" r="8" fill="none" stroke="#FFFFFF" stroke-width="1" />
    <circle cx="220" cy="160" r="5" fill="none" stroke="#FFFFFF" stroke-width="1" />
    <line x1="215" y1="155" x2="225" y2="165" stroke="#FFFFFF" stroke-width="1" />
    <line x1="215" y1="165" x2="225" y2="155" stroke="#FFFFFF" stroke-width="1" />
    
    <circle cx="370" cy="160" r="10" fill="#FFFF00" opacity="0.8" stroke="#E6E600" stroke-width="1" />
    <circle cx="370" cy="160" r="8" fill="none" stroke="#FFFFFF" stroke-width="1" />
    <circle cx="370" cy="160" r="5" fill="none" stroke="#FFFFFF" stroke-width="1" />
    <line x1="365" y1="155" x2="375" y2="165" stroke="#FFFFFF" stroke-width="1" />
    <line x1="365" y1="165" x2="375" y2="155" stroke="#FFFFFF" stroke-width="1" />
  </g>
  
  <!-- Sombras para dar profundidad -->
  <ellipse cx="300" cy="350" rx="180" ry="20" fill="#000000" opacity="0.1" />
  
  <!-- Texto del producto -->
  <text x="300" y="50" font-family="Montserrat, sans-serif" font-size="24" font-weight="bold" text-anchor="middle" fill="#000000">Taco de Carnitas</text>
  <text x="300" y="80" font-family="Open Sans, sans-serif" font-size="16" text-anchor="middle" fill="#666666">Con cebolla y cilantro</text>
</svg>